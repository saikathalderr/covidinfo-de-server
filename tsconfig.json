{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "~/controllers/*": ["src/controllers/*"],
            "~/middlewares/*": ["src/middlewares/*"],
            "~/handlers/*": ["src/handlers/*"],
            "~/interfaces/*": ["src/interfaces/*"],
            "~/enums/*": ["src/enums/*"],
            "~/utils/*": ["src/utils/*"]
        }
    }
}
